<%# **************************************
    Header
************************************* %>
<% if (title) { %>
  <h1><%= title %></h1>
<% } %>

<%# **************************************
    Message Section
************************************* %>
<% if (errors && errors.length > 0) { %>
  <div class="notice">
    <ul>
      <% errors.forEach(function(err) { %>
        <li><%= err %></li>
      <% }); %>
    </ul>
  </div>
<% } %>

<%# **************************************
    Delete Vehicle Confirmation View
************************************* %>
<form id="deleteForm" action="/inv/delete" method="POST">
  <input type="hidden" name="inv_id" value="<%= inv_id %>">

  <p class="warning">
    ⚠️ Confirm Deletion - This action <strong>cannot be undone</strong>.
  </p>

  <label for="inv_make">Make</label>
  <input type="text" id="inv_make" name="inv_make" value="<%= inv_make %>" readonly>

  <label for="inv_model">Model</label>
  <input type="text" id="inv_model" name="inv_model" value="<%= inv_model %>" readonly>

  <label for="inv_year">Year</label>
  <input type="text" id="inv_year" name="inv_year" value="<%= inv_year %>" readonly>

  <label for="inv_price">Price (USD)</label>
  <input type="text" id="inv_price" name="inv_price" value="$<%= inv_price %>" readonly>

  <br>
  <button type="submit" class="btn btn-danger">Delete Vehicle</button>

</form>
