<%# **************************************
    Header
************************************* %>
<% if (title) { %>
    <h1><%= title %></h1>
    <% } %>

<%# **************************************
Message
************************************* %>
    <% if (errors && errors.length > 0) { %>
  <div class="notice">
    <ul>
      <% errors.forEach(function(err) { %>
        <li><%= err %></li>
      <% }); %>
    </ul>
  </div>
<% } %>


<%# **************************************
    Add Vehicle View
************************************* %>
<form id="addVehicleForm" action="/inv/add-vehicle" method="POST" novalidate>
  <p>All fields are required unless otherwise noted.</p>

  <!-- Classification select (required) -->
  <label for="classificationList">* Classification</label>
  <%- classificationList %>

  <!-- Make (required, max 50 chars) -->
  <label for="inv_make">* Make</label>
  <input 
    type="text" 
    id="inv_make" 
    name="inv_make" 
    required 
    maxlength="50" 
    value="<%= (locals && locals.inv_make) ? locals.inv_make : '' %>" 
    placeholder="Enter make">

  <!-- Model (required, max 50 chars) -->
  <label for="inv_model">* Model</label>
  <input 
    type="text" 
    id="inv_model" 
    name="inv_model" 
    required 
    maxlength="50" 
    value="<%= (locals && locals.inv_model) ? locals.inv_model : '' %>" 
    placeholder="Enter model">

  <!-- Year (required, number, min 1900, max next year) -->
  <label for="inv_year">* Year</label>
  <input 
    type="number" 
    id="inv_year" 
    name="inv_year" 
    required 
    min="1900" 
    max="<%= new Date().getFullYear() + 1 %>" 
    value="<%= (locals && locals.inv_year) ? locals.inv_year : '' %>" 
    placeholder="e.g., 2025">

  <!-- Price (required, numeric pattern) -->
  <label for="inv_price">* Price (USD)</label>
  <input 
    type="text" 
    id="inv_price" 
    name="inv_price" 
    required 
    pattern="^\d+(\.\d{1,2})?$" 
    title="Enter a valid price (e.g., 19999.99)" 
    value="<%= (locals && locals.inv_price) ? locals.inv_price : '' %>" 
    placeholder="Enter price">

  <!-- Mileage (required, number >= 0) -->
  <label for="inv_miles">* Mileage</label>
  <input 
    type="number" 
    id="inv_miles" 
    name="inv_miles" 
    required 
    min="0" 
    step="1" 
    value="<%= (locals && locals.inv_miles) ? locals.inv_miles : '' %>" 
    placeholder="Enter mileage">

  <!-- Color (required, max 30 chars) -->
  <label for="inv_color">* Color</label>
  <input 
    type="text" 
    id="inv_color" 
    name="inv_color" 
    required 
    maxlength="30" 
    value="<%= (locals && locals.inv_color) ? locals.inv_color : '' %>" 
    placeholder="Enter a colour">

  <!-- Description (required) -->
  <label for="inv_description">* Description</label>
  <textarea 
    id="inv_description" 
    name="inv_description" 
    rows="5" 
    required
    placeholder="Enter description"><%= (locals && locals.inv_description) ? locals.inv_description : '' %></textarea>

  <!-- Image and thumbnail (optional, defaults provided) -->
  <label for="inv_image">Image Path</label>
  <input 
    type="text" 
    id="inv_image" 
    name="inv_image" 
    value="<%= (locals && locals.inv_image) ? locals.inv_image : '/images/no-image-available.png' %>" 
    placeholder="Enter image path">

  <label for="inv_thumbnail">Thumbnail Path</label>
  <input 
    type="text" 
    id="inv_thumbnail" 
    name="inv_thumbnail" 
    value="<%= (locals && locals.inv_thumbnail) ? locals.inv_thumbnail : '/images/no-image-available-thumb.png' %>" 
    placeholder="Enter thumbnail path">

  <button type="submit" class="btn">Add Vehicle</button>
</form>
      