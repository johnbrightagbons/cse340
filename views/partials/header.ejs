<!-- ================= Top Header Section ================= -->
<header id="top-header">
  
  <!-- Website name linked to the homepage -->
  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </span>


  <!-- User tools section (e.g., login, profile, etc.) -->
  <form action="/inv/search" method="GET" class="header-search">
  <input type="text" name="q" placeholder="Search..." required>
</form>
  <% if (loggedin) { %>

    <!-- visible only when logged in -->
    <a href="/account/management">Welcome <%= accountData.account_firstname %></a>

    <a href="/account/logout">Logout</a>
  <% } else { %>
    <!-- visible only when not logged in -->
    <a href="/account/login">My Account</a>
  <% } %>

</header>
